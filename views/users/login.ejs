<% layout("/layouts/boilerplate") %>
<div class="row mt-3    ">
    <h2 class="mb-4 col-6 offset-3">Login</h2>
  <div class="col-6 offset-3">
    <form action="/login" method="POST" class=" mb-1 needs-validation">
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          id="username"
          class="form-control"
          type="text"
          required
        />
        
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          id="password"
          class="form-control"
          type="password"
          required
        />
      </div>
      <button class="btn  btn-success bg-green">Login</button>
    </form>
  </div>
</div>
